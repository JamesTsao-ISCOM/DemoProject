@model Project01_movie_lease_system.Common.PagedResult<Project01_movie_lease_system.Models.MovieDetails>
@{
    ViewData["Title"] = "電影搜尋";
    
    // 輔助方法 - 將電影類型轉換為中文顯示
    string GetTypeDisplayName(Project01_movie_lease_system.Models.MovieType type)
    {
        return type switch
        {
            Project01_movie_lease_system.Models.MovieType.Action => "動作",
            Project01_movie_lease_system.Models.MovieType.Comedy => "喜劇",
            Project01_movie_lease_system.Models.MovieType.Drama => "劇情",
            Project01_movie_lease_system.Models.MovieType.Horror => "恐怖",
            Project01_movie_lease_system.Models.MovieType.SciFi => "科幻",
            Project01_movie_lease_system.Models.MovieType.Romance => "愛情",
            Project01_movie_lease_system.Models.MovieType.Documentary => "紀錄片",
            _ => type.ToString()
        };
    }
}

<style>
    .search-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 0;
    }
    
    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }
    
    .movie-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: none;
    }
    
    .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }
    
    .movie-poster {
        position: relative;
        height: 400px;
        overflow: hidden;
    }
    
    .movie-poster img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .movie-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }
    
    .movie-info {
        padding: 20px;
    }
    
    .movie-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 8px;
        line-height: 1.3;
    }
    
    .movie-meta {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 10px;
    }
    
    .movie-rating {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        color: #ffc107;
    }
    
    .movie-price {
        font-size: 1.2rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 15px;
    }
</style>

<!-- Search Header -->
<section class="search-header">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold mb-3">電影搜尋</h1>
            <p class="lead">探索精彩電影世界</p>
        </div>
    </div>
</section>

<!-- Search and Results -->
<div class="container py-5">
    <!-- Combined Search Form -->
    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="bi bi-search me-2"></i>電影搜尋
            </h5>
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("Index", "Movies")" id="searchForm">
                <div class="row g-3">
                    <!-- 名稱搜尋 -->
                    <div class="col-md-4">
                        <label class="form-label">電影名稱</label>
                        <input type="text" name="searchTitle" class="form-control" 
                               placeholder="輸入電影名稱..." 
                               value="@ViewBag.SearchTitle">
                    </div>
                    
                    <!-- 類型搜尋 -->
                    <div class="col-md-3">
                        <label class="form-label">電影類型</label>
                        <select name="searchType" class="form-select">
                            <option value="All">所有類型</option>
                            <option value="Action" selected="@(ViewBag.SearchType == "Action")">動作片</option>
                            <option value="Comedy" selected="@(ViewBag.SearchType == "Comedy")">喜劇片</option>
                            <option value="Drama" selected="@(ViewBag.SearchType == "Drama")">劇情片</option>
                            <option value="Horror" selected="@(ViewBag.SearchType == "Horror")">恐怖片</option>
                            <option value="SciFi" selected="@(ViewBag.SearchType == "SciFi")">科幻片</option>
                            <option value="Romance" selected="@(ViewBag.SearchType == "Romance")">愛情片</option>
                            <option value="Documentary" selected="@(ViewBag.SearchType == "Documentary")">紀錄片</option>
                        </select>
                    </div>
                    
                    <!-- 日期搜尋 -->
                    <div class="col-md-2">
                        <label class="form-label">開始日期</label>
                        <input type="date" name="startDate" class="form-control" 
                               value="@ViewBag.StartDate">
                    </div>
                    
                    <div class="col-md-2">
                        <label class="form-label">結束日期</label>
                        <input type="date" name="endDate" class="form-control" 
                               value="@ViewBag.EndDate">
                    </div>
                    
                    <!-- 搜尋按鈕 -->
                    <div class="col-md-1">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100 d-block">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                
                <!-- 清除篩選按鈕 -->
                <div class="row mt-3">
                    <div class="col-12">
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="clearFilters">
                            <i class="bi bi-x-circle me-1"></i>清除所有篩選
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Search Info Banner -->
    @if (!string.IsNullOrEmpty(ViewBag.SearchTitle as string) || 
         !string.IsNullOrEmpty(ViewBag.SearchType as string) || 
         !string.IsNullOrEmpty(ViewBag.StartDate as string))
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle me-2"></i>
            <div class="flex-grow-1">
                <strong>目前搜尋條件：</strong>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTitle as string))
                {
                    <span class="badge bg-primary me-2">名稱：@ViewBag.SearchTitle</span>
                }
                @if (!string.IsNullOrEmpty(ViewBag.SearchType as string))
                {
                    // 將搜尋類型轉換為中文顯示
                    string searchTypeChinese;
                    if(ViewBag.SearchType != "All")
                    {
                        var searchTypeEnum = Enum.Parse<Project01_movie_lease_system.Models.MovieType>(ViewBag.SearchType);
                        searchTypeChinese = GetTypeDisplayName(searchTypeEnum);
                    }
                    else{
                        searchTypeChinese = "所有類型";
                    }
                    <span class="badge bg-success me-2">類型：@searchTypeChinese</span>
                }
                @if (!string.IsNullOrEmpty(ViewBag.StartDate as string))
                {
                    <span class="badge bg-warning text-dark">日期：@ViewBag.StartDate ~ @ViewBag.EndDate</span>
                }
            </div>
            <a href="@Url.Action("Index", "Movies")" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-arrow-clockwise me-1"></i>重置搜尋
            </a>
        </div>
    }

    <!-- Results Info -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold" id="searchTitle">電影列表</h3>
        <div>
            <span class="text-muted">找到 @Model.TotalCount 部電影</span>
            <span class="badge bg-info text-dark">第 @Model.PageNumber 頁/共 @Model.TotalPages 頁</span>
        </div>
    </div>

    <!-- Movie Grid -->
    <div class="movie-grid" id="movieList">
        <!-- Sample Movie Card 1 -->
        @foreach (var movie in Model.Items)
        {
            <div class="movie-card">
            <div class="movie-poster">
                <img src="~/uploads/movies/@movie.ImageFileName" alt="@movie.Title">
                <span class="movie-badge bg-success text-white">NEW</span>
            </div>
            <div class="movie-info">
                <h3 class="movie-title">@movie.Title</h3>
                <div class="movie-meta">
                    <span class="badge bg-primary me-2">@GetTypeDisplayName(movie.Type)</span>
                    <span>@movie.ReleaseDate | @movie.Director</span>
                </div>
                <div class="movie-rating">
                @for (int i = 0; i < 5; i++)
                {
                    if (i < (int)@movie.AverageRating)
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                    else if (i == (int)@movie.AverageRating && @movie.AverageRating >= 0.5)
                    {
                        <i class="bi bi-star-half"></i>
                    }
                    else
                    {
                        <i class="bi bi-star"></i>
                    }
                }
                <span class="ms-2 text-muted">@movie.AverageRating | (@movie.ReviewCount)</span>
                </div>
                <div class="movie-price">NT$ @movie.Price</div>
                <button class="btn btn-outline-primary btn-sm w-100" 
                    onclick="location.href='@Url.Action("MovieDetails", "Movies", new { id = @movie.Id })'">
                    <i class="bi bi-play-circle me-1"></i>立即租借
                </button>
            </div>
        </div>   
        }
    </div>
    @if(@Model.TotalPages > 0){
         @await Html.PartialAsync("_Pagination", new Project01_movie_lease_system.Common.Pagination{
            TotalPages = Model.TotalPages,
            PageNumber = Model.PageNumber,
            PageSize = Model.PageSize
        })
    }
    @if(@Model.TotalCount == 0)
    {
        <!-- 無搜尋結果提示 (預設隱藏) -->
        <div id="noResults" class="text-center py-5">
            <i class="bi bi-search" style="font-size: 4rem; color: #ccc;"></i>
            <h4 class="mt-3">找不到符合條件的電影</h4>
            <p class="text-muted">請嘗試使用其他搜尋條件</p>
        </div>
    }
</div>
@section Scripts{
    <script src="~/js/movies.js"></script>
}