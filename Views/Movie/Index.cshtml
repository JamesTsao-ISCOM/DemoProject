@{
    ViewData["Title"] = "電影搜尋";
}

<style>
    .search-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 0;
    }
    
    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }
    
    .movie-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: none;
    }
    
    .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }
    
    .movie-poster {
        position: relative;
        height: 400px;
        overflow: hidden;
    }
    
    .movie-poster img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .movie-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }
    
    .movie-info {
        padding: 20px;
    }
    
    .movie-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 8px;
        line-height: 1.3;
    }
    
    .movie-meta {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 10px;
    }
    
    .movie-rating {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        color: #ffc107;
    }
    
    .movie-price {
        font-size: 1.2rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 15px;
    }
</style>

<!-- Search Header -->
<section class="search-header">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold mb-3">電影搜尋</h1>
            <p class="lead">探索精彩電影世界</p>
        </div>
    </div>
</section>

<!-- Search and Results -->
<div class="container py-5">
    <!-- Search Form - 參考 Dashboard 的簡單設計 -->
    <div class="card mb-3">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" id="searchByName">名稱搜尋</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="searchByType">類型搜尋</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="searchByDate">日期搜尋</a>
            </li>
        </ul>
        <div class="tab-content p-3" id="searchContent">
            <div class="tab-pane gap-2 fade show active" id="searchByNameContent">
                <input type="text" class="form-control d-inline-block" style="width: auto;" placeholder="請輸入電影名稱">
                <button class="btn btn-primary ms-2" id="btn-searchByName">搜尋</button>
            </div>
            <div class="tab-pane fade gap-2" id="searchByTypeContent">
                <select class="form-select d-inline-block" style="width: auto;">
                    <option value="" disabled selected>選擇類型</option>
                    <option value="Action">動作片</option>
                    <option value="Comedy">喜劇片</option>
                    <option value="Drama">劇情片</option>
                    <option value="Horror">恐怖片</option>
                    <option value="SciFi">科幻片</option>
                    <option value="Romance">愛情片</option>
                    <option value="Documentary">紀錄片</option>
                </select>
                <button class="btn btn-primary ms-2" id="btn-searchByType">搜尋</button>
            </div>
            <div class="tab-pane fade gap-2" id="searchByDateContent">
                <input type="date" class="form-control d-inline-block" style="width: auto;" id="startDate"> 
                <span class="mx-2">~</span>
                <input type="date" class="form-control d-inline-block" style="width: auto;" id="endDate">
                <button class="btn btn-primary ms-2" id="btn-searchByDate">搜尋</button>
            </div>
        </div>
    </div>

