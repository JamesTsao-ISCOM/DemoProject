@using Microsoft.AspNetCore.Authentication  <!-- Add this line to use authentication features -->
@using Microsoft.AspNetCore.Authentication.Cookies <!-- Add this line to read cookie -->
@using System.Security.Claims <!-- Add this line to use claims -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieGo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project01_movie_lease_system.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MovieGo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">首頁</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index">電影列表</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if(User.Identities != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">個人資料</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Leases" asp-action="MyLeases">租借紀錄</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">登出</a></li>
                            </ul>
                        </li>
                    }
                    else{
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">登入</a>
                        </li>
                    }
                </ul>
</div>
            </div>
        </nav>
    </header>
    <!-- 主內容 -->
    <main class="flex-grow-1 mb-30 min-vh-100">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="border-top footer text-muted bg-dark text-white py-3 mt-auto">
        <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
            <a class="nav-link text-white text-center" asp-controller="Home" asp-action="Service">服務條款</a>
            <a class="nav-link text-white text-center" asp-asp-controller="Home" asp-action="Privacy">隱私權條款</a>
            <a class="nav-link text-white text-center" asp-controller="Admin" asp-action="Login">管理員登入</a>
        </div>
        <div class="d-flex justify-content-center gap-5 text-white">
            <a href="https://facebook.com"><i class="bi bi-facebook fs-4"></i></a>
            <a href="https://twitter.com"><i class="bi bi-twitter fs-4"></i></a>
            <a href="https://instagram.com"><i class="bi bi-instagram fs-4"></i></a>
        </div>
        <div class="text-center mt-3 text-white">
            &copy; 2025 - MovieGO. All rights reserved.
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dayjs/1.11.18/dayjs.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/loginTimer.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
