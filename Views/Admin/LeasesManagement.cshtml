@model Project01_movie_lease_system.Common.PagedResult<Project01_movie_lease_system.Models.Lease>
@{
    ViewData["Title"] = "租借管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    // 輔助方法 - 獲取狀態顯示文字
    string GetStatusText(int status)
    {
        return status switch
        {
            0 => "待處理",
            1 => "租借中",
            2 => "已完成",
            3 => "已取消",
            _ => "未知狀態"
        };
    }
    
    // 輔助方法 - 獲取狀態樣式
    string GetStatusClass(int status)
    {
        return status switch
        {
            0 => "status-pending",
            1 => "status-active",
            2 => "status-completed",
            3 => "status-cancelled",
            _ => "status-unknown"
        };
    }
    
    // 輔助方法 - 獲取狀態圖標
    string GetStatusIcon(int status)
    {
        return status switch
        {
            0 => "bi-clock-history",
            1 => "bi-play-circle",
            2 => "bi-check-circle",
            3 => "bi-x-circle",
            _ => "bi-question-circle"
        };
    }
}

<style>
    .management-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px 0;
        margin: -20px -30px 30px -30px;
        border-radius: 0 0 15px 15px;
    }
    
    .management-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 8px;
    }
    
    .management-subtitle {
        opacity: 0.9;
        margin: 0;
    }
    
    .stats-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        text-align: center;
        transition: all 0.3s ease;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }
    
    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
    }
    
    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 5px;
    }
    
    .stat-label {
        color: #666;
        font-size: 0.9rem;
    }
    
    .pending-icon { color: #ffc107; }
    .active-icon { color: #17a2b8; }
    .completed-icon { color: #28a745; }
    .cancelled-icon { color: #dc3545; }
    
    .filters-section {
        background: white;
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }
    
    .filters-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .form-control, .form-select {
        border-radius: 10px;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .btn-search {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-search:hover {
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }
    
    .btn-reset {
        background: transparent;
        border: 2px solid #6c757d;
        color: #6c757d;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-reset:hover {
        background: #6c757d;
        color: white;
    }
    
    .leases-table-section {
        background: white;
        border-radius: 15px;
        padding: 0;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }
    
    .table-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 20px 25px;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .table-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .results-count {
        color: #666;
        font-size: 0.9rem;
    }
    
    .table-responsive {
        max-height: 600px;
        overflow-y: auto;
    }
    
    .leases-table {
        margin: 0;
        font-size: 0.9rem;
    }
    
    .leases-table th {
        background: #f8f9fa;
        border: none;
        padding: 15px 20px;
        font-weight: 600;
        color: #2c3e50;
        white-space: nowrap;
        position: sticky;
        top: 0;
        z-index: 10;
    }
    
    .leases-table td {
        padding: 15px 20px;
        border: none;
        border-bottom: 1px solid #f1f3f4;
        vertical-align: middle;
    }
    
    .leases-table tbody tr:hover {
        background: #f8f9ff;
    }
    
    .lease-id {
        font-family: 'Courier New', monospace;
        font-weight: 600;
        color: #667eea;
    }
    
    .customer-info {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .customer-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.8rem;
    }
    
    .customer-details h6 {
        margin: 0;
        font-size: 0.9rem;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .customer-details small {
        color: #666;
        font-size: 0.8rem;
    }
    
    .movie-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }
    
    .movie-poster-sm {
        width: 40px;
        height: 60px;
        border-radius: 5px;
        object-fit: cover;
        box-shadow: 0 3px 10px rgba(0,0,0,0.2);
    }
    
    .movie-details h6 {
        margin: 0 0 3px 0;
        font-size: 0.9rem;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .movie-meta {
        font-size: 0.8rem;
        color: #666;
    }
    
    .status-badge {
        padding: 6px 12px;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }
    
    .status-pending {
        background: #fff3cd;
        color: #856404;
        border: 1px solid #ffeaa7;
    }
    
    .status-active {
        background: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }
    
    .status-completed {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    
    .status-cancelled {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    
    .date-info {
        font-size: 0.85rem;
        color: #666;
    }
    
    .lease-date {
        font-weight: 600;
        color: #2c3e50;
    }
    
    .return-date {
        margin-top: 3px;
    }
    
    .price-info {
        font-size: 1.1rem;
        font-weight: 700;
        color: #667eea;
    }
    
    .payment-method {
        font-size: 0.8rem;
        color: #666;
        margin-top: 3px;
    }
    
    .action-buttons {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }
    
    .btn-action {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }
    
    .btn-approve {
        background: #28a745;
        color: white;
    }
    
    .btn-approve:hover {
        background: #218838;
        color: white;
    }
    
    .btn-cancel {
        background: #dc3545;
        color: white;
    }
    
    .btn-cancel:hover {
        background: #c82333;
        color: white;
    }
    
    .btn-view {
        background: #17a2b8;
        color: white;
    }
    
    .btn-view:hover {
        background: #138496;
        color: white;
    }
    
    .btn-complete {
        background: #ffc107;
        color: #212529;
    }
    
    .btn-complete:hover {
        background: #e0a800;
        color: #212529;
    }
    
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }
    
    .empty-state i {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.3;
    }
    
    .empty-state h4 {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }
    
    .pagination-wrapper {
        padding: 20px;
        background: white;
        border-radius: 0 0 15px 15px;
    }
</style>

<!-- Management Header -->
<div class="management-header">
    <div class="container-fluid">
        <h1 class="management-title">
            <i class="bi bi-clipboard-data me-3"></i>
            租借管理系統
        </h1>
        <p class="management-subtitle">管理和監控所有電影租借交易</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="stats-cards">
    <div class="stat-card">
        <div class="stat-icon pending-icon">
            <i class="bi bi-clock-history"></i>
        </div>
        <div class="stat-number" id="pendingCount"></div>
        <div class="stat-label">待處理</div>
    </div>
    <div class="stat-card">
        <div class="stat-icon active-icon">
            <i class="bi bi-play-circle"></i>
        </div>
        <div class="stat-number" id="activeCount"></div>
        <div class="stat-label">租借中</div>
    </div>
    <div class="stat-card">
        <div class="stat-icon completed-icon">
            <i class="bi bi-check-circle"></i>
        </div>
        <div class="stat-number" id="completedCount"></div>
        <div class="stat-label">已完成</div>
    </div>
    <div class="stat-card">
        <div class="stat-icon cancelled-icon">
            <i class="bi bi-x-circle"></i>
        </div>
        <div class="stat-number" id="cancelledCount"></div>
        <div class="stat-label">已取消</div>
    </div>
</div>

<!-- Filters Section -->
<div class="filters-section">
    <h5 class="filters-title">
        <i class="bi bi-funnel"></i>
        篩選條件
    </h5>
    <form itemid="searchLeaseForm" class="row g-3">
        <div class="col-md-3">
            <label class="form-label">租借編號</label>
            <input type="text" name="leaseId" class="form-control" placeholder="輸入租借編號...">
        </div>
        <div class="col-md-3">
            <label class="form-label">會員姓名</label>
            <input type="text" name="memberName" class="form-control" placeholder="輸入會員姓名...">
        </div>
        <div class="col-md-2">
            <label class="form-label">狀態</label>
            <select name="status" class="form-select">
                <option value="-1">全部狀態</option>
                <option value="0">待處理</option>
                <option value="1">租借中</option>
                <option value="2">已完成</option>
                <option value="3">已取消</option>
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label">租借日期</label>
            <input type="date" name="leaseDate" class="form-control">
        </div>
        <div class="col-md-2">
            <label class="form-label">&nbsp;</label>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-search flex-fill">
                    <i class="bi bi-search"></i>
                </button>
                <button type="button" class="btn btn-reset" onclick="this.form.reset()">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Leases Table -->
<div class="leases-table-section">
    <div class="table-header">
        <h4 class="table-title">
            <i class="bi bi-table"></i>
            租借紀錄列表
        </h4>
        <div class="results-count">
            共 @(Model?.TotalCount ?? 0) 筆租借紀錄
        </div>
    </div>
    
    @if (Model != null && Model.Items.Any())
    {
        <div class="table-responsive">
            <table class="table leases-table">
                <thead>
                    <tr>
                        <th>租借編號</th>
                        <th>會員資訊</th>
                        <th>電影資訊</th>
                        <th>狀態</th>
                        <th>租借日期</th>
                        <th>歸還日期</th>
                        <th>金額</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lease in Model.Items)
                    {
                        <tr>
                            <td>
                                <span class="lease-id">#@lease.Id.ToString("D6")</span>
                            </td>
                            <td>
                                <div class="customer-info">
                                    <div class="customer-avatar">
                                        @(lease.Member?.Name?.Substring(0, 1) ?? "U")
                                    </div>
                                    <div class="customer-details">
                                        <h6>@(lease.Member?.Name ?? "未知會員")</h6>
                                        <small>@(lease.Member?.Email ?? "")</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="movie-info">
                                    <img src="@(string.IsNullOrEmpty(lease.Movie?.ImageFileName) ? "https://via.placeholder.com/40x60/667eea/ffffff?text=Movie" : Url.Content("~/uploads/movies/" + lease.Movie.ImageFileName))" 
                                         alt="@lease.Movie?.Title" 
                                         class="movie-poster-sm">
                                    <div class="movie-details">
                                        <h6>@(lease.Movie?.Title ?? "未知電影")</h6>
                                        <div class="movie-meta">
                                            <span class="badge bg-primary">@(lease.Movie?.Type.ToString() ?? "")</span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="status-badge @GetStatusClass(lease.Status)">
                                    <i class="bi @GetStatusIcon(lease.Status)"></i>
                                    @GetStatusText(lease.Status)
                                </span>
                            </td>
                            <td>
                                <div class="date-info">
                                    <div class="lease-date">@lease.LeaseDate.ToString("MM/dd")</div>
                                    <small>@lease.LeaseDate.ToString("HH:mm")</small>
                                </div>
                            </td>
                            <td>
                                <div class="date-info">
                                    @if (lease.ReturnDate.HasValue)
                                    {
                                        <div class="return-date">@lease.ReturnDate.Value.ToString("MM/dd")</div>
                                        <small>@lease.ReturnDate.Value.ToString("HH:mm")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">待歸還</small>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="price-info">NT$ @(lease.Movie?.Price ?? 0)</div>
                                <div class="payment-method">@(lease.payment_method ?? "未指定")</div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    @if (lease.Status == 0)
                                    {
                                        <button class="btn-action btn-approve" title="批准租借">
                                            <i class="bi bi-check"></i>
                                            批准
                                        </button>
                                        <button class="btn-action btn-cancel" title="取消租借">
                                            <i class="bi bi-x"></i>
                                            取消
                                        </button>
                                    }
                                    else if (lease.Status == 1)
                                    {
                                        <button class="btn-action btn-complete" title="完成租借">
                                            <i class="bi bi-check-square"></i>
                                            完成
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (Model.TotalPages > 1)
        {
            <div class="pagination-wrapper">
                @await Html.PartialAsync("_Pagination", new Project01_movie_lease_system.Common.Pagination{
                    TotalPages = Model.TotalPages,
                    PageNumber = Model.PageNumber,
                    PageSize = Model.PageSize
                })
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h4>暫無租借紀錄</h4>
            <p>目前沒有任何租借紀錄</p>
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/leaseManagement.js"></script>
}